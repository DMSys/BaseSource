@model Odrys.Areas.Admin.Models.SPageModel
@{
    ViewBag.Title = "Нова страница";
}
@Scripts.Render("~/Scripts/tinymce/tinymce.min.js")
<script>
        tinymce.init({selector:'textarea'});
</script>
<style>
    .page_value {
        height: 400px;
    }
</style>
<h2>Нова страница</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.TypeName)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.TypeID, (SelectList)ViewBag.PageTypes)
            @Html.ValidationMessageFor(model => model.TypeID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Value)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Value, new { @class = "page_value" })
            @Html.ValidationMessageFor(model => model.Value)
        </div>

        <br />
        <p>
            <input type="submit" value="Запис" class="input_button" />
             @Html.ActionLink("Отказ", "Index", null, new { @class = "link_button" })
        </p>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
