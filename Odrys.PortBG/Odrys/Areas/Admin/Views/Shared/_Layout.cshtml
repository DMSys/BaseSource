<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/AminStyle")
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</head>
<body>
    <div class="header_menu">
        @Html.AppMenu(HttpSession.AminSiteID, "header_menu")
    </div>
    @if (ViewBag.PageMenu == null)
    { 
        @RenderBody()
    }
    else
    {
    <table class="page_content">
        <tr>
            <td class="pc_info">@Html.ActionSiteLink(HttpSession.CurrentSiteID)</td>
            <td rowspan="2" class="pc_body">
                @RenderBody()
            </td>
        </tr>
        <tr>
            <td class="pc_menu">
                @Html.AppMenu(HttpSession.AminSiteID, (string)ViewBag.PageMenu)
            </td>
        </tr>
    </table>
    }
</body>
</html>
